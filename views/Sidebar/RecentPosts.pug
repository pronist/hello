li#recent-posts.el
  h2.tit 최근 글
  ul.posts(class='flex flex-col gap-y-4')
    s_rctps_rep
      li.post(class='flex justify-between')
        .tit(class='text-overflow-hidden text-h-400')
          a.link(
            class='text-sm'
            href='[##_rctps_rep_link_##]') [##_rctps_rep_title_##]
          .date(class='mt-1 text-xs') [##_rctps_rep_simple_date_##]
        s_rctps_rep_thumbnail
          img.thumb(
            class='lazyload object-cover ml-3 bg-h-100 w-11 h-11'
            data-src='[##_rctps_rep_thumbnail_##]'
            data-sizes='auto'
            alt=''
            width='44'
            height='44')
