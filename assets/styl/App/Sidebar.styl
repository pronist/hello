#__sidebar
  &.opened
    .__
      left -1px !important
    .overlay
      content ''
      position fixed
      left 0
      top 0
      width 100%
      height 100%
      background-color alpha(black, .6)
      z-index 9998
  .__
    background-color var(--h-color-background-level-2)
    position fixed
    top 0
    left '-%s' % ($SIDEBAR_WIDTH)
    width $SIDEBAR_WIDTH
    height 100%
    overflow hidden
    z-index 9999
    transition-duration .2s
    transition-property left
    padding 0 !important
    @media screen and (max-width: 1400px)
      left '-%s' % ($SIDEBAR_WIDTH)
    .___
      overflow-x hidden
      overflow-y scroll
      height 100%
      width $SIDEBAR_WIDTH + 20px
      position absolute
      padding 25px 0
      box-sizing border-box
      > div, nav
        padding 15px 0
        padding-left 20px
        box-sizing border-box
        max-width $SIDEBAR_WIDTH
        ul li
          TextOverflowHidden()
          max-width $SIDEBAR_WIDTH - 38px
          *
            color var(--h-color-blurrier) !important
          a:hover
            color var(--h-color)
      h2
        color var(--h-color)
        font-size .9rem
        font-weight 600
@media screen and (min-width: 1400px)
  body[data-sidebar-default='1']
    #__sidebar
      .__
        left -1px !important
