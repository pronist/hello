.permalink
  .container_postbtn
    .postbtn_like
      .wrap_btn
        display inline-block
        border none
        &:not([id^=reaction-])
          button
            color var(--h-button-color) !important
            button($BUTTON_SIZE, $BUTTON_SIZE, 5px, $BUTTON_SIZE - 2, var(--h-button-background), var(--h-button-color))
        button, button[data-entry-id], .uoc-count
          &::before
            font-weight 600
            FontAwesome()
            font-size $BUTTON_FONT-SIZE
        &.wrap_btn_share, &.wrap_btn_etc
          .btn_post
            > *
              display none
        &[id^=reaction-]
          button
            button(60px, 35px, 5px, unset, var(--h-button-color-hover-background) , var(--h-button-color-hover))
            > .uoc-icon
                > .ico_like
                  display none
            .uoc-count
              font-size .8rem
              font-weight 600
              color var(--h-button-color-hover) !important
              line-height unset !important
              &::before
                margin-right 5px
                content '\f004'
        &.wrap_btn_share
          .btn_share
            &::before
              content '\f1e0'
        button[data-entry-id]
          &::before
            content '\f200'
          .ico_statistics
            display none
        &.wrap_btn_etc
          .btn_etc1
            &::before
              content '\f0ad'
          .btn_etc2
            &::before
              content '\f141'
