$SCROLL_INDICATOR_HEIGHT = 3px

#scroll-indicator
  position fixed
  top 0
  width 100%
  z-index 9998
  .progress-container
    width 100%
    height $SCROLL_INDICATOR_HEIGHT
    .progress-bar
      background-color var(--h-color)
      height $SCROLL_INDICATOR_HEIGHT
      width 0%
      border-radius 0 5px 5px 0
